<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>
    <variable
        name="HomeViewModel"
        type="com.example.smartz.home.HomeVM" />

    <import type="com.example.smartz.login.LoginVM.ERRORS" />

</data>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/roadtopview"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/parkedView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:background="@drawable/car_parked_area"
        android:layout_marginTop="@dimen/margin_15dp"
        />

    <ImageView
        android:id="@+id/carPark"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/topviewcar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car is Parked"
        android:textSize="30sp"
        android:id="@+id/tvParkCar"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="#E00E0E"/>
</LinearLayout>
</layout>